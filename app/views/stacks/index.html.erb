<h1>Listing stacks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Ingredients</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @stacks.each do |stack| %>
  <tr>
    <td><%= stack.name %></td>
    <td><%= stack.description %></td>
     <%  _ingredients = stack.ingredients.map{|i| i[:name]}%>
    <td><%=  _ingredients.present? ? _ingredients : "Blank" %></td>

   
    <td><%= link_to 'Show', stack %></td>
    <td><%= link_to 'Edit', edit_stack_path(stack) %></td>
    <td><%= link_to 'Destroy', stack, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    
    <!-- users.map{|u| u[:email]} -->
  </tr>
<% end %>
</table>

<br />

