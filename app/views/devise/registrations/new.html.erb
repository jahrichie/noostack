<h2>Sign up</h2>

<%= form_for(resource,:html => {:autocomplete => "off"}, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div>
  <%= f.email_field :email, :autofocus => true, :placeholder => 'email' %></div>

  <div>
  <%= f.text_field  :username, :placeholder => 'username'  %></div>

  <div> 
  <%= f.password_field :password, :placeholder => 'password' %></div>

  <div> 
  <%= f.password_field :password_confirmation,:placeholder => 'password confirm', :autocomplete => :off %></div>

  <div><%= f.submit "Sign up", :class => "button" %></div>
<% end %>

<%= render "devise/shared/links" %>
